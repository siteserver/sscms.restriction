{
  "name": "restriction",
  "displayName": "后台访问限制插件",
  "description": "SSCMS 后台访问限制插件能够设置后台访问IP地址黑名单以及白名单，增强CMS系统后台安全性",
  "version": "1.0.0",
  "license": "GPL-3.0",
  "publisher": "sscms",
  "engines": {
    "sscms": "^7.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "内容"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/siteserver/sscms.restriction"
  },
  "icon": "/assets/restriction/logo.svg",
  "output": "bin/Release/netcoreapp3.1",
  "main": "SSCMS.Restriction.dll",
  "extensions": {
    "permissions": {
      "restriction_settings": {
        "text": "访问限制选项",
        "type": "app"
      },
      "restriction_white": {
        "text": "IP地址白名单",
        "type": "app"
      },
      "restriction_black": {
        "text": "IP地址黑名单",
        "type": "app"
      }
    },
    "menus:app_plugins_all:menus": {
      "restriction_all": {
        "text": "后台访问限制",
        "iconClass": "ion-unlocked",
        "type": "app",
        "permissions": [
          "restriction_settings",
          "restriction_white",
          "restriction_black"
        ],
        "menus": {
          "restriction_settings": {
            "text": "访问限制选项",
            "link": "/ss-admin/restriction/settings/",
            "permissions": ["restriction_settings"],
            "order": 1
          },
          "restriction_white": {
            "text": "IP地址白名单",
            "link": "/ss-admin/restriction/range/?isWhiteList=true",
            "permissions": ["restriction_white"],
            "order": 2
          },
          "restriction_black": {
            "text": "IP地址黑名单",
            "link": "/ss-admin/restriction/range/?isWhiteList=false",
            "permissions": ["restriction_black"],
            "order": 3
          }
        }
      }
    },
    "tables": {
      "sscms_restriction_settings": {
        "columns": [
          {
            "attributeName": "RestrictionType",
            "dataType": "VarChar"
          },
          {
            "attributeName": "IsHostRestriction",
            "dataType": "Boolean"
          },
          {
            "attributeName": "Host",
            "dataType": "VarChar"
          }
        ]
      },
      "sscms_restriction_range": {
        "columns": [
          {
            "attributeName": "IsWhiteList",
            "dataType": "Boolean"
          },
          {
            "attributeName": "IpRange",
            "dataType": "VarChar"
          }
        ]
      }
    }
  }
}